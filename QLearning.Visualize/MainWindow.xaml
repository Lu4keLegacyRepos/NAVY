        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLearning.Visualize"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Canvas Margin="205,0,0,0" x:Name="canvas">

        </Canvas>
        <Label Content="Steps: " HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top"/>
        <Label x:Name="counter" Content="0" HorizontalAlignment="Left" Margin="59,58,0,0" VerticalAlignment="Top"/>
        <Button Content="Move" HorizontalAlignment="Left" Margin="15,131,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="ResetMouse" HorizontalAlignment="Left" Margin="15,183,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="Auto Move" HorizontalAlignment="Left" Margin="15,156,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>

    </Grid>
</Window>
